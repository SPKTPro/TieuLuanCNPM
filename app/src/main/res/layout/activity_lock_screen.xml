<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg10"
    tools:context="com.example.rinnv.tieuluancnpm.LockScreenActivity">


    <TextView
        android:text="TextView"
        android:textSize="100px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEN"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginTop="111dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:textSize="70px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtVN"
        android:textAlignment="center"

        android:layout_marginTop="66dp"
        android:layout_alignTop="@+id/txtEN"
        android:layout_alignParentStart="true" />

    <Button

        android:layout_width="140px"
        android:layout_height="140px"
        android:background="@drawable/quit"
        android:id="@+id/btnExit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button

        android:layout_width="140px"
        android:layout_height="140px"
        android:background="@drawable/speak2"
        android:id="@+id/btnspeak"

        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btnExit" />

    <Button

        android:layout_width="145px"
        android:layout_height="145px"
        android:id="@+id/btnOpenApp"
        android:background="@drawable/home"

        android:layout_marginEnd="15dp"
        android:layout_alignTop="@+id/btnspeak"
        android:layout_toStartOf="@+id/btnUncheckWord" />

    <Button

        android:layout_width="145px"
        android:layout_height="145px"
        android:id="@+id/btnUncheckWord"
        android:background="@drawable/home"

        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btnspeak" />
</RelativeLayout>
